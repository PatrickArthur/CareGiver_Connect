<%= form_for [@user, @deployment], class: "intro" do |f| %>
<legend>Fill in and Click Submit to Deploy</legend>

<div class="form-group">
  <%= f.label :name, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control"%></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.text_field :description, class: "form-control"%></br>
  </div>
</div>

<div class="col-sm-offset-2 col-sm-6" style="height:75px;">
  <%= f.submit "submit", class: "btn btn-primary" %>
</div>
<% end %>

<div class="col-sm-offset-4 col-sm-6">
  <%= link_to 'Back to Deployments', user_deployments_path %>
</div>
