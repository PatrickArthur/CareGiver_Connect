<%= form_for [:admin, @user], class: "intro" do |f| %>
<legend>Welcome, please fill in credentials</legend>
<div class="form-group">
  <%= f.label :email, class: "col-sm-4 control-label", for: "textinput" %>
  <div class="col-sm-8">
    <%= f.text_field :email, autofocus: true, class: "form-control" %></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.text_field :password, class: "form-control"%></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :rscale_password, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.text_field :rscale_password, class: "form-control"%></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :account, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <%= f.number_field :account, class: "form-control"%></br>
  </div>
</div>

<div class="col-sm-offset-2 col-sm-6" style="height:75px;">
  <%= f.submit "submit", class: "btn btn-primary" %>
</div>
<% end %>

<div class="col-sm-offset-4 col-sm-6">
  <%= link_to 'Registerd Users', admin_users_path %>
</div>
