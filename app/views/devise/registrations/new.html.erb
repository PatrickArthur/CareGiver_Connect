<%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: "form-horizontal")) do |f| %>
<legend>Sign Up</legend>
<div class="form-group">
  <%= f.label :email, class: "col-sm-4 control-label", for: "textinput" %>
  <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </br>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, class: "col-sm-4 control-label", for: "textinput"%>
  <div class="col-sm-8">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"%></br>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: "col-sm-4 control-label", for: "textinput" %>
  <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
    </br>
  </div>
</div>

<div class="radios">
  <%= f.radio_button :user_type,false, checked: true %> Patient
  <%= f.radio_button :user_type,true  %> Care Giver
<div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
  </br>
  </br>
  </br>
  <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>
