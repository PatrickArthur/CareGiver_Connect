<!DOCTYPE html>
<html>
<head>
  <title>Cloudgration</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
</head>
<body>

  <div class="navbar">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="navbar-header">
            <a class="navbar-brand" href="#" class="col-sm-12">
              <img alt="Brand" src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRpLfOMARXgSL2UHKvoLgM-kKFydAfQsbZ1Uyt0fLWcEJrB3779" height="30" width="200" >
            </a>
          </div>
        </div>
        <div class="col-sm-3 col-sm-offset-3">
          <% if user_signed_in? %>
            Signed in as <%= current_user.email %>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          <% else %>
          <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <p><%= notice %></p>
    <p><%= alert %></p>
    <div class="row">
      <div class="col-sm-4">
        <div class="chg-size6">
        </div>
      </div>
      <div class="col-sm-5">
        <%= yield %>
      </div>
      <div class="col-sm-4">
      </div>
    </div>
  </div>

</body>
</html>
